@model IEnumerable<MovieShop.ViewModels.RentedViewModel>
@{
    ViewBag.Title = "Rented";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Rented</h2>
<br />
@if (Model.Any())
{
<table class="table table-bordered table-hover animated zoomIn">
    <thead class="bg-dark text-white">
        <tr>
            <td>
                Title
            </td>
            <td>
                Genre
            </td>
            <td>
                Rented Date
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var rent in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(rent.Title,"Details", new { id = rent.MovieId })
                </td>
                <td>
                    @rent.GenreName
                </td>
                <td>
                    @rent.CreatedAt
                </td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <p class="text-center">You don't have any movie rented at the moment.</p>
}
