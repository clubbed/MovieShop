@model MovieShop.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_MembershipLayout.cshtml";
}

<div>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-signin", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h1 class="text-center">Register</h1>
        <hr />
        <div class="form-group col-md-10 offset-1">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "example@email.com", autofocus = "autofocus" })
            @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-10 offset-1">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "******" })
            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger"})
        </div>
        <div class="form-group col-md-10 offset-1">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "******" })
        </div>
        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Register</button>
        <p class="lead">
            @Html.ValidationSummary("", new { @class = "text-danger" })
        </p>
    }
    <hr class="my-4">
    <div class="form-signin">
        <button class="btn btn-lg btn-danger btn-block text-uppercase" type="submit"><i class="fab fa-google mr-2"></i> Sign in with Google</button>
        <a class="btn btn-lg btn-primary btn-block text-uppercase" href="@Url.Action("Login","Account")"><i class="fab fa-facebook-f mr-2"></i> Login</a>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
