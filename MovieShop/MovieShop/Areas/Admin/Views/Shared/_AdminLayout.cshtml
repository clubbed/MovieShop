<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Simple Sidebar - Start Bootstrap Template</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Areas/Admin/Content/admin.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">Start Bootstrap </div>
            <div class="list-group list-group-flush">
                <a href="@Url.Action("Index","Dashboard")" class="list-group-item list-group-item-action bg-light">Dashboard</a>
                <a href="@Url.Action("Movies","Dashboard")" class="list-group-item list-group-item-action bg-light">Movies</a>
                <a href="@Url.Action("Index","Rents")" class="list-group-item list-group-item-action bg-light"><i class="fas fa-users"></i>Rents</a>
                <a href="@Url.Action("Index","Users")" class="list-group-item list-group-item-action bg-light">Users</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-primary" id="menu-toggle">Show/Hide</button>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">

                        @if (User.IsInRole("Admin"))
                        {
                            using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logout" }))
                            {
                                @Html.AntiForgeryToken();
                                <li class="nav-item active"><a class="nav-link" href="#" onclick="logOut();">Log Out</a></li>
                            }
                        }
                    </ul>
                </div>
            </nav>
            <div class="container-fluid">
                <div class="card border-0 shadow my-5">
                    <div class="card-body p-5">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required:false)
    <script>
        $(document).ready(function () {
            $("#menu-toggle").click(function (e) {
                e.preventDefault();
                $("#wrapper").toggleClass("toggled");
            });
            function logOut() {
                $("logout").submit();
            }
        });
    </script>
</body>
</html>
